<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customFontStyle">
        <item name="android:fontFamily">@font/roboto_condensed_bolditalic</item>
    </style>

    <style name="BoldFontStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="customFontStyle2">
        <item name="android:fontFamily">@font/angelinevintage_demo</item>
    </style>

    <style name="MainBtnstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
    </style>

	<style name="waitLayoutHorizontalLayoutStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">64dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

</resources>
